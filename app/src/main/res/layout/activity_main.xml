<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".MainActivity"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar_top"
            layout="@layout/my_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <RelativeLayout
            android:id="@+id/banner_block"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_top"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <RelativeLayout
                android:id="@+id/banner_img_block"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/slide_1"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_yiman_nuru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_img_block"

                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimaryVariant"
                android:fontFamily="cursive"
                android:padding="5dp"
                android:text="@string/text_yiman_nuru"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingConstraints,SmallSp" />


            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_yiman_nuru"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scrollbarSize="01dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbHorizontal="?attr/textFillColor"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <Button
                        android:id="@+id/horizontal_btn_main"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/main_page"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/horizontal_btn_tasbih"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/tasbih"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/horizontal_btn_zikir"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/zikirdin_turloru"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/horizontal_btn_masnun_duba"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/masnun_dubalar"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/horizontal_btn_alty_sypat"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/alty_sypat"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/horizontal_btn_allahtyn_ysymdary"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline"
                        android:padding="10dp"
                        android:text="@string/allanyn_99_ysymy"
                        android:textAllCaps="false"
                        android:textColor="?attr/textFillColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fragments_block"
            app:layout_constraintTop_toBottomOf="@+id/banner_block"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            tools:ignore="MissingConstraints">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/place_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>
        </RelativeLayout>


            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="?attr/colorPrimaryVariant"
                android:padding="5dp"
                app:srcCompat="@drawable/designed_by"
                tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/menu"
        android:backgroundTint="?attr/colorOnPrimary"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               android:gravity="center_vertical"

               tools:ignore="MissingConstraints">
               <ImageView
                   android:background="@null"
                   android:id="@+id/btn_light_mode"
                   android:layout_width="22dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_day_mode_icon"
                   app:tint="#fff"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toStartOf="@+id/switch_btn_night_mode"
                   android:padding="5dp"
                   android:visibility="visible"
                   tools:ignore="ContentDescription,MissingConstraints,OnClick" />

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/switch_btn_night_mode"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toStartOf="@id/btn_night_mode"
                   app:layout_constraintTop_toTopOf="parent"
                   />

               <ImageView
                   android:background="@null"
                   android:id="@+id/btn_night_mode"
                   android:layout_width="22dp"
                   android:layout_height="22dp"
                   android:src="@drawable/ic_night_mode_icon"
                   app:tint="#fff"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:visibility="visible"
                   android:padding="5dp"
                   tools:ignore="ContentDescription,MissingConstraints" />


           </LinearLayout>
            <ImageView
                android:id="@+id/logo_bottom_in_menu"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorPrimaryVariant"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/designed_by"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>