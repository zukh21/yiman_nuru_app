<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_islam_test_bg"
    tools:context=".SplashScreenForTestGame">

    <ImageView
        android:id="@+id/sky_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sky"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/icon_man_img"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/sky_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_man"
        />

   <ImageView
       android:id="@+id/buttonStartGame"
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:src="@drawable/off_on_button"
       app:layout_constraintTop_toBottomOf="@+id/icon_man_img"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="100dp"
       android:background="@drawable/round_bg"
       app:tint="@color/white" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/small_icons"
        android:scaleType="centerCrop"
        android:elevation="-1dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>